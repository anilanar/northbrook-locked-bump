{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "types": [
      "jest"
    ]
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "src/__tests__/*.ts"
  ]
}
